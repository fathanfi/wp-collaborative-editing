{
  "extends": [ "@humanmade", "plugin:jsdoc/recommended", "plugin:react/recommended", "plugin:react/jsx-runtime" ],
  "rules": {
    "arrow-parens": [ "error", "as-needed" ],
    "comma-dangle": [ "error", "always-multiline" ],
    "jsdoc/require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true
        }
      }
    ]
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  }
}
